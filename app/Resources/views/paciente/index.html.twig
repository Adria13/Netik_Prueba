{% extends 'base.html.twig' %}

{% block body %}
    <h1>Pacientes list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Email</th>
                <th>Fechavisita</th>
                <th>Horavisita</th>
                <th>Idcentro</th>
                <th>Idmedico</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for paciente in pacientes %}
            <tr>
                <td><a href="{{ path('paciente_show', { 'id': paciente.id }) }}">{{ paciente.id }}</a></td>
                <td>{{ paciente.name }}</td>
                <td>{{ paciente.email }}</td>
                <td>{% if paciente.fechaVisita %}{{ paciente.fechaVisita|date('Y-m-d') }}{% endif %}</td>
                <td>{% if paciente.horaVisita %}{{ paciente.horaVisita|date('H:i:s') }}{% endif %}</td>
                <td>{{ paciente.idCentro }}</td>
                <td>{{ paciente.idMedico }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('paciente_show', { 'id': paciente.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('paciente_edit', { 'id': paciente.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('paciente_new') }}">Create a new paciente</a>
        </li>
    </ul>
{% endblock %}
